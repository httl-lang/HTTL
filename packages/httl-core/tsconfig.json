{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "declarationMap": true,
    "esModuleInterop": true,
    "composite": true,
    "allowJs": true,
    "resolveJsonModule": true,
    // "strict": true //TODO
  },
  "include": [
    "src/**/*",
    "src/**/*.json"

  ],
  "exclude": [
    "dist"
  ]
}